<% layout('/layouts/bt') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Healing Session</h3>
      <form method="POST" action="/healings/<%= healing._id %>?_method=PUT" class="needs-validation" novalidate>
        <!-- Name of the Healing Session -->
        <div class="mb-3">
          <label for="title" class="form-label">Club Name</label>
          <input name="healing[title]" value="<%= healing.title %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter club name</div>
        </div>
        
        <!-- Healing Session Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="healing[description]" class="form-control" required>
          <%= healing.description %> </textarea>
          <div class="invalid-feedback">Please enter description</div>
        </div>

        <!-- Image URL -->
        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input name="healing[image][url]" value="<%= healing.image.url %>" type="text" placeholder="Image URL" class="form-control" required />
          <div class="invalid-feedback">Please enter image-url</div>
        </div>

        <div class="row">
          <!-- Healing Session Price -->
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Number of People</label>
            <input name="healing[price]" value="<%= healing.price %>" class="form-control" required />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>

          <!-- Healing Method or Country/Region -->
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
            <div class="invalid-feedback">Please enter country</div>
          </div>
        </div>

        <!-- Healing Session Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="healing[location]" value="<%= healing.location %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter location</div>
        </div>

        <br />
        <button class="btn btn-outline-danger mb-5 add-btn">Edit Healing Session</button>
      </form>
    </div>
  </div>
</body>
